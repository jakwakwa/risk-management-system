generator client {
  provider        = "prisma-client-js"
  output          = "../generated/client"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [pg_trgm, vector]
}

model MonitoringJob {
  id                 String               @id @default(cuid())
  clientName         String
  cronExpression     String
  nextRunAt          DateTime
  userId             String
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  riskProfile        RiskProfile?
  publicDataAnalyses PublicDataAnalysis[]

  @@index([nextRunAt])
}

model AuditLog {
  id          String   @id @default(cuid())
  jobId       String
  clientName  String
  result      String
  gcsUrl      String
  pdfHash     String
  screened_at DateTime @default(now())

  @@index([jobId])
}

model SanctionEntity {
  id        String                      @id @default(cuid())
  name      String
  source    String
  embedding Unsupported("vector(768)")?
  createdAt DateTime                    @default(now())

  @@index([name(ops: raw("gin_trgm_ops"))], type: Gin)
}

model BlindIndex {
  id       String @id @default(cuid())
  hash     String
  recordId String
  model    String
  field    String

  @@index([hash])
  @@index([recordId, model, field])
}

model SystemConfig {
  id                String   @id @default(cuid())
  key               String   @unique // e.g. "ENGINE_SETTINGS"
  fuzzyThreshold    Float    @default(0.7)
  phoneticAlgorithm String   @default("BMPM") // BMPM or DoubleMetaphone
  semanticContext   String? // Optional context for vector search
  updatedAt         DateTime @updatedAt
}

model RiskProfile {
  id              String        @id @default(cuid())
  monitoringJobId String        @unique
  monitoringJob   MonitoringJob @relation(fields: [monitoringJobId], references: [id], onDelete: Cascade)

  bqClientId       Int? // Reference to BigQuery Client ID
  avgMonthlyVolume Decimal? @db.Decimal(12, 2)
  volatilityScore  Decimal? @db.Decimal(5, 2)
  riskScore        Float? // 0-100
  lastAnalysed     DateTime @default(now())

  alerts RiskAlert[]
}

model RiskAlert {
  id            String      @id @default(cuid())
  riskProfileId String
  riskProfile   RiskProfile @relation(fields: [riskProfileId], references: [id], onDelete: Cascade)

  type        String // e.g. "VOLUME_SPIKE", "NEWS_NEGATIVE"
  severity    String // "LOW", "MEDIUM", "HIGH", "CRITICAL"
  description String
  metadata    Json?
  createdAt   DateTime @default(now())
}

// ============================================
// Public Data Analysis Models
// ============================================

model WatchListClient {
  id        String   @id @default(cuid())
  name      String
  priority  String   @default("HIGH") // HIGH, CRITICAL
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  analyses PublicDataAnalysis[]

  @@index([priority])
}

model PublicDataAnalysis {
  id                String  @id @default(cuid())
  monitoringJobId   String?
  watchListClientId String?
  clientName        String

  // Research Status
  status         String  @default("PENDING") // PENDING, RUNNING, COMPLETED, FAILED
  firecrawlJobId String?

  // Results (JSON for flexibility)
  negativeMedia      Json?
  pepScreening       Json?
  financialHealth    Json?
  statutoryEnquiries Json?
  mergersActivity    Json?

  // Aggregated Risk
  overallRiskLevel String   @default("PENDING") // LOW, MEDIUM, HIGH, CRITICAL, PENDING
  riskFlags        String[] @default([])

  createdAt   DateTime  @default(now())
  completedAt DateTime?

  monitoringJob   MonitoringJob?   @relation(fields: [monitoringJobId], references: [id], onDelete: Cascade)
  watchListClient WatchListClient? @relation(fields: [watchListClientId], references: [id], onDelete: Cascade)

  @@index([monitoringJobId])
  @@index([watchListClientId])
  @@index([status])
  @@index([overallRiskLevel])
}

model ManualInvestigativeReport {
  id         String @id @default(cuid())
  clientName String
  analystId  String // User ID of the analyst

  findings  String @db.Text
  riskLevel String @default("PENDING") // LOW, MEDIUM, HIGH, CRITICAL, PENDING
  status    String @default("DRAFT") // DRAFT, FINAL

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientName])
  @@index([analystId])
}

model Sandbox {
  id        String   @id @default(cuid())
  alert_id  String   @unique
  payload   Json?
  createdAt DateTime @default(now())

  @@index([alert_id])
}
