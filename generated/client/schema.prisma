generator client {
  provider        = "prisma-client-js"
  output          = "../generated/client"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [pg_trgm, vector]
}

model MonitoringJob {
  id                 String               @id @default(cuid())
  clientName         String
  cronExpression     String
  nextRunAt          DateTime
  userId             String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  type               JobType              @default(CLIENT_MONITORING)
  publicDataAnalyses PublicDataAnalysis[]
  riskProfile        RiskProfile?

  @@index([nextRunAt])
}

model AuditLog {
  id          String   @id @default(cuid())
  jobId       String
  clientName  String
  result      String
  gcsUrl      String
  pdfHash     String
  screened_at DateTime @default(now())

  @@index([jobId])
}

model SanctionEntity {
  id        String                 @id @default(cuid())
  name      String
  source    String
  embedding Unsupported("vector")?
  createdAt DateTime               @default(now())

  @@index([name(ops: raw("gin_trgm_ops"))], type: Gin)
}

model BlindIndex {
  id       String @id @default(cuid())
  hash     String
  recordId String
  model    String
  field    String

  @@index([hash])
  @@index([recordId, model, field])
}

model SystemConfig {
  id                String   @id @default(cuid())
  key               String   @unique
  fuzzyThreshold    Float    @default(0.7)
  phoneticAlgorithm String   @default("BMPM")
  semanticContext   String?
  updatedAt         DateTime @updatedAt
}

model RiskProfile {
  id               String        @id @default(cuid())
  monitoringJobId  String        @unique
  bqClientId       Int?
  avgMonthlyVolume Decimal?      @db.Decimal(12, 2)
  volatilityScore  Decimal?      @db.Decimal(5, 2)
  riskScore        Float?
  lastAnalysed     DateTime      @default(now())
  alerts           RiskAlert[]
  monitoringJob    MonitoringJob @relation(fields: [monitoringJobId], references: [id], onDelete: Cascade)
}

model RiskAlert {
  id            String      @id @default(cuid())
  riskProfileId String
  type          String
  severity      String
  description   String
  metadata      Json?
  createdAt     DateTime    @default(now())
  riskProfile   RiskProfile @relation(fields: [riskProfileId], references: [id], onDelete: Cascade)
}

model WatchListClient {
  id        String               @id @default(cuid())
  name      String
  priority  String               @default("HIGH")
  notes     String?
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
  analyses  PublicDataAnalysis[]

  @@index([priority])
}

model PublicDataAnalysis {
  id                 String           @id @default(cuid())
  monitoringJobId    String?
  watchListClientId  String?
  clientName         String
  status             String           @default("PENDING")
  firecrawlJobId     String?
  negativeMedia      Json?
  pepScreening       Json?
  financialHealth    Json?
  statutoryEnquiries Json?
  mergersActivity    Json?
  overallRiskLevel   String           @default("PENDING")
  riskFlags          String[]         @default([])
  createdAt          DateTime         @default(now())
  completedAt        DateTime?
  monitoringJob      MonitoringJob?   @relation(fields: [monitoringJobId], references: [id], onDelete: Cascade)
  watchListClient    WatchListClient? @relation(fields: [watchListClientId], references: [id], onDelete: Cascade)

  @@index([monitoringJobId])
  @@index([watchListClientId])
  @@index([status])
  @@index([overallRiskLevel])
}

model ManualInvestigativeReport {
  id         String   @id @default(cuid())
  clientName String
  analystId  String
  findings   String
  riskLevel  String   @default("PENDING")
  status     String   @default("DRAFT")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([clientName])
  @@index([analystId])
}

model Sandbox {
  id        String   @id @default(cuid())
  alert_id  String   @unique
  payload   Json?
  createdAt DateTime @default(now())

  @@index([alert_id])
}

enum JobType {
  CLIENT_MONITORING
  SYSTEM_ETL
  SYSTEM_INFERENCE
}

model AnomalyReport {
  id           String   @id @default(cuid())
  jobId        String
  gcsPath      String
  anomalyCount Int
  status       String   @default("GENERATED")
  createdAt    DateTime @default(now())

  @@index([jobId])
}
